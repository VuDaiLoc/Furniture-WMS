@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập - Luxury WMS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .slider-img {
            height: 100vh;
            object-fit: cover;
            filter: brightness(0.4);
            transition: opacity 1s ease-in-out;
        }

        .slide {
            position: absolute;
            width: 100%;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

            .slide.active {
                opacity: 1;
            }

        .login-container {
            backdrop-filter: blur(10px);
            background-color: rgba(55, 48, 41, 0.8);
        }
    </style>
</head>
<body class="overflow-hidden">
    <!-- Slide nền -->
    <div class="relative h-screen w-full">
        <!-- Slide 1 -->
        <div class="slide active">
            <img src="https://images.unsplash.com/photo-1616486338812-3dadae4b4ace?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1632&q=80" class="slider-img w-full" alt="Nội thất sang trọng">
        </div>

        <!-- Slide 2 -->
        <div class="slide">
            <img src="https://images.unsplash.com/photo-1617806118233-18e1de247200?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1632&q=80" class="slider-img w-full" alt="Thiết kế nội thất">
        </div>

        <!-- Slide 3 -->
        <div class="slide">
            <img src="https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1600&q=80" class="slider-img w-full" alt="Không gian sang trọng">
        </div>
    </div>

    <!-- Form đăng nhập -->
    <div class="absolute top-0 left-0 w-full h-full flex items-center justify-center p-4">
        <div class="login-container rounded-lg shadow-2xl p-8 w-full max-w-md border border-amber-800">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-amber-100 mb-2">LUXURY WMS</h1>
                <p class="text-amber-300">Hệ thống quản lý nội thất cao cấp</p>
            </div>

            <form>
                <div class="mb-4">
                    <label for="username" class="block text-amber-200 mb-2">Tài khoản</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-user text-amber-500"></i>
                        </div>
                        <input type="text" id="username" class="w-full pl-10 pr-3 py-3 bg-amber-900 bg-opacity-50 border border-amber-700 rounded-lg text-amber-100 focus:outline-none focus:ring-2 focus:ring-amber-600 focus:border-transparent" placeholder="Nhập tài khoản">
                    </div>
                </div>

                <div class="mb-6">
                    <label for="password" class="block text-amber-200 mb-2">Mật khẩu</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-amber-500"></i>
                        </div>
                        <input type="password" id="password" class="w-full pl-10 pr-3 py-3 bg-amber-900 bg-opacity-50 border border-amber-700 rounded-lg text-amber-100 focus:outline-none focus:ring-2 focus:ring-amber-600 focus:border-transparent" placeholder="Nhập mật khẩu">
                    </div>
                </div>

                <div class="flex items-center justify-between mb-6">
                    <div class="flex items-center">
                        <input id="remember-me" type="checkbox" class="h-4 w-4 text-amber-600 focus:ring-amber-500 border-amber-700 rounded bg-amber-900 bg-opacity-50">
                        <label for="remember-me" class="ml-2 block text-sm text-amber-300">Ghi nhớ đăng nhập</label>
                    </div>
                    <a href="#" class="text-sm text-amber-400 hover:text-amber-300">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="w-full bg-amber-700 hover:bg-amber-600 text-amber-50 font-bold py-3 px-4 rounded-lg transition duration-300 mb-4">
                    ĐĂNG NHẬP
                </button>

                <button type="button" class="w-full bg-transparent border border-amber-600 hover:bg-amber-900 hover:bg-opacity-30 text-amber-300 font-bold py-3 px-4 rounded-lg transition duration-300">
                    ĐĂNG KÝ TÀI KHOẢN
                </button>
            </form>
        </div>
    </div>

    <script>
        // Xử lý slideshow tự động
        document.addEventListener('DOMContentLoaded', function() {
            const slides = document.querySelectorAll('.slide');
            let currentSlide = 0;
            let slideInterval;
            const slideDuration = 5000; // 5 giây mỗi slide

            function showSlide(n) {
                slides.forEach(slide => {
                    slide.classList.remove('active');
                });
                slides[n].classList.add('active');
            }

            function nextSlide() {
                currentSlide = (currentSlide + 1) % slides.length;
                showSlide(currentSlide);
            }

            function startSlideShow() {
                slideInterval = setInterval(nextSlide, slideDuration);
            }

            // Bắt đầu slideshow
            showSlide(currentSlide);
            startSlideShow();
        });
    </script>
</body>
</html>